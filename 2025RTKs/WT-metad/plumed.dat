# Activate MOLINFO functionalities
MOLINFO STRUCTURE=equi.pdb
WHOLEMOLECULES ENTITY0=1-5871
# define one distance in protein
d1: DISTANCE ATOMS=73,3559
d2: DISTANCE ATOMS=88,3541

D2: COMBINE ARG=d1,d2 COEFFICIENTS=0.5,0.5 PERIODIC=NO
D1: DISTANCE ATOMS=23,3932 NOPBC

#restr: RESTRAINT ARG=D1,D2 AT=7 KAPPA=2000

# Activate well-tempered metadynamics
METAD ...
   ARG=D1,D2
   # Deposit a Gaussian every 500 time steps, with initial height equal to 1.2 kJ/mol 
   PACE=500 HEIGHT=1.2
   # The bias factor should be wisely chosen 
   BIASFACTOR=10
   # Gaussian width (sigma) should be chosen based on CV fluctuation in unbiased run 
   SIGMA=0.1,0.1
   CALC_RCT
   TEMP=300.0
   LABEL=metad
   GRID_MIN=0.0,0.0
   GRID_MAX=12.0,10.0
   # Gaussians will be written to file and also stored on grid 
   FILE=HILLS
... METAD
# Print both collective variables on COLVAR file every 10 steps
PRINT ARG=D1,D2 FILE=distance.dat STRIDE=100
PRINT ARG=metad.* FILE=metad_data.dat STRIDE=500

